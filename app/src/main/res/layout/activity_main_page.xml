<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/class_linear"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bg"
        >

        <Button
            android:id="@+id/add_class"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:background="@drawable/add"
            android:textColor="@color/colorwhite"
            />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="0dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="班课"
            android:textSize="24sp"
            android:textColor="@color/colorwhite"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Edit"
            android:visibility="invisible"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        app:layout_constraintTop_toBottomOf="@id/class_linear"
        android:clickable="true"
        />

    <ListView
        android:id="@+id/list_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        app:layout_constraintTop_toBottomOf="@id/class_linear"
        android:clickable="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorlightgray"
        android:orientation="vertical"
        android:id="@+id/me_navigation"
        android:visibility="invisible"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/main_page_to_change_info"
            android:layout_width="match_parent"
            android:background="@color/colorwhite"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/me_person_image"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/timg"
                />

            <TextView
                android:id="@+id/me_personname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/me_person_image"
                android:text="吴玠璘"
                android:layout_marginTop="25dp"
                />

            <ImageView
                android:id="@+id/me_person_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:background="@drawable/rightarray"
                android:height="20dp"
                android:width="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/me_change_password_btn"
            android:layout_width="match_parent"
            android:background="@color/colorwhite"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/me_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="修改密码"
                android:layout_marginTop="8dp"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/me_change_password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:background="@drawable/rightarray"
                android:height="20dp"
                android:width="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorwhite"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:id="@+id/me_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="用户反馈"
                android:layout_marginTop="8dp"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/me_feedback_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:background="@drawable/rightarray"
                android:height="20dp"
                android:width="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorwhite"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:id="@+id/me_about_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="关于我们"
                android:layout_marginTop="8dp"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/me_about_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:background="@drawable/rightarray"
                android:height="20dp"
                android:width="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorwhite"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            >


            <Button
                android:id="@+id/me_exit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="退出当前账号"
                android:singleLine="true"
                android:textSize="17sp"
                android:background="@color/colorwhite"/>
        </RelativeLayout>


    </LinearLayout>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>