<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bg"
        >

        <Button
            android:id="@+id/teacher_edit_homework_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:background="@drawable/back"
            android:textColor="@color/colorwhite"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑作业"
            android:textSize="24sp"
            android:textColor="@color/colorwhite"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Edit"
            android:visibility="invisible"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorwhite"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="标题"
            android:layout_marginTop="8dp"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/teacher_edit_homework_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:singleLine="true"
            android:text="Default Title"
            />
    </RelativeLayout>

    <View
    android:layout_height="1.5dp"
    android:background="#EFEFEF"
    android:layout_width="match_parent"/>



    <RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/colorwhite"
    android:layout_height="40dp"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="分值"
        android:layout_marginTop="8dp"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/teacher_edit_homework_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:singleLine="true"
        android:text="Default profile"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作业详情"
        android:layout_marginTop="10dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/teacher_edit_homework_profile"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#fff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorwhite"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/teacher_edit_homework_save_and_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="保存并发布"
            android:singleLine="true"
            android:textSize="17sp"
            android:background="@color/colorwhite"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorwhite"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/teacher_edit_homework_save_not_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="保存但不发布"
            android:singleLine="true"
            android:textSize="17sp"
            android:background="@color/colorwhite"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorwhite"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/teacher_edit_homework_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="删除/放弃作业"
            android:singleLine="true"
            android:textSize="17sp"
            android:background="@color/colorwhite"/>
    </RelativeLayout>


</LinearLayout>