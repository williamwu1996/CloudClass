<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bg"
        >

        <Button
            android:id="@+id/teacher_homework_detail_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:background="@drawable/back"
            android:textColor="@color/colorwhite"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="作业详情"
            android:textSize="24sp"
            android:textColor="@color/colorwhite"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Edit"
            android:visibility="invisible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/teacher_homework_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作业题目"
        android:textSize="17dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/teacher_homework_detail_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作业分值10分"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作业描述"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/teacher_homework_detail_profile"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#FFF"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorwhite"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/teacher_homework_detail_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="删除作业"
            android:singleLine="true"
            android:textSize="17sp"
            android:background="@color/colorwhite"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorwhite"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/teacher_homework_detail_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="结束作业"
            android:singleLine="true"
            android:textSize="17sp"
            android:background="@color/colorwhite"/>
    </RelativeLayout>


</LinearLayout>